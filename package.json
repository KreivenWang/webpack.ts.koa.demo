    "ts-node": "^8.3.0",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@types/koa": "^2.0.49",
    "@types/webpack": "^4.39.1",
    "koa": "^2.8.1"
  }
